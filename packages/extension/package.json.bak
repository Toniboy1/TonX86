{
  "name": "tonx86",
  "displayName": "TonX86",
  "description": "Educational x86-like assembly environment for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Education"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toniboy1/TonX86"
  },
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "asm",
        "aliases": ["Assembly", "asm", "x86"],
        "extensions": [".asm", ".s"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.asm",
        "path": "./syntaxes/asm.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "tonx86.run",
        "title": "TonX86: Run",
        "category": "TonX86"
      },
      {
        "command": "tonx86.pause",
        "title": "TonX86: Pause",
        "category": "TonX86"
      },
      {
        "command": "tonx86.stepOver",
        "title": "TonX86: Step Over",
        "category": "TonX86"
      },
      {
        "command": "tonx86.stepIn",
        "title": "TonX86: Step In",
        "category": "TonX86"
      },
      {
        "command": "tonx86.stepOut",
        "title": "TonX86: Step Out",
        "category": "TonX86"
      },
      {
        "command": "tonx86.reset",
        "title": "TonX86: Reset",
        "category": "TonX86"
      }
    ],
    "breakpoints": [
      {
        "language": "asm"
      }
    ],
    "debuggers": [
      {
        "type": "tonx86",
        "languages": ["asm"],
        "label": "TonX86",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "initialConfigurations": [
          {
            "name": "Launch Program",
            "type": "tonx86",
            "request": "launch",
            "program": "${workspaceFolder}/program.asm",
            "stopOnEntry": true,
            "console": "integratedTerminal"
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the program to debug."
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": false
              },
              "console": {
                "type": "string",
                "enum": ["integratedTerminal", "externalTerminal"],
                "description": "Where to launch the debug target.",
                "default": "integratedTerminal"
              }
            }
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tonx86-explorer",
          "title": "TonX86",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "tonx86-explorer": [
        {
          "id": "tonx86.registers",
          "name": "Registers"
        },
        {
          "id": "tonx86.memory",
          "name": "Memory"
        },
        {
          "id": "tonx86.display",
          "name": "LCD Display"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src",
    "test": "echo no tests",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
