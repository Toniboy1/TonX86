{
  "name": "tonx86",
  "displayName": "TonX86",
  "description": "Educational x86-like assembly environment for VS Code",
  "version": "0.4.4",
  "publisher": "Toniboy1",
  "author": {
    "name": "Anthony Fasano (Toniboy1)",
    "url": "https://github.com/Toniboy1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toniboy1/TonX86.git"
  },
  "bugs": {
    "url": "https://github.com/Toniboy1/TonX86/issues"
  },
  "homepage": "https://github.com/Toniboy1/TonX86#readme",
  "engines": {
    "vscode": "^1.84.0"
  },
  "keywords": [
    "x86",
    "assembly",
    "assembler",
    "debugger",
    "simulator",
    "cpu",
    "emulator",
    "education",
    "learning",
    "programming",
    "debug adapter",
    "dap",
    "lsp",
    "language server",
    "lcd display",
    "memory visualization",
    "tonx86"
  ],
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Education"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tonx86.assemble",
        "title": "TonX86: Assemble",
        "category": "TonX86",
        "icon": "$(symbol-class)"
      },
      {
        "command": "tonx86.run",
        "title": "TonX86: Run",
        "category": "TonX86",
        "icon": "$(debug-start)"
      },
      {
        "command": "tonx86.pause",
        "title": "TonX86: Pause",
        "category": "TonX86",
        "icon": "$(debug-pause)"
      },
      {
        "command": "tonx86.stepOver",
        "title": "TonX86: Step Over",
        "category": "TonX86",
        "icon": "$(debug-step-over)"
      },
      {
        "command": "tonx86.stepIn",
        "title": "TonX86: Step In",
        "category": "TonX86",
        "icon": "$(debug-step-in)"
      },
      {
        "command": "tonx86.stepOut",
        "title": "TonX86: Step Out",
        "category": "TonX86",
        "icon": "$(debug-step-out)"
      },
      {
        "command": "tonx86.reset",
        "title": "TonX86: Reset",
        "category": "TonX86",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "tonx86.lcdPopOut",
        "title": "TonX86: Pop Out LCD Display",
        "category": "TonX86",
        "icon": "$(open-preview)"
      },
      {
        "command": "tonx86.lcdPopIn",
        "title": "TonX86: Pop In LCD Display",
        "category": "TonX86",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tonx86-explorer",
          "title": "TonX86",
          "icon": "$(bracket)"
        }
      ]
    },
    "views": {
      "tonx86-explorer": [
        {
          "icon": "",
          "id": "tonx86.registers",
          "name": "Registers",
          "type": "tree"
        },
        {
          "icon": "",
          "id": "tonx86.memoryA",
          "name": "Memory A",
          "type": "tree"
        },
        {
          "icon": "",
          "id": "tonx86.memoryB",
          "name": "Memory B",
          "type": "tree"
        },
        {
          "icon": "",
          "id": "tonx86.lcd",
          "name": "LCD Display",
          "type": "webview"
        },
        {
          "icon": "",
          "id": "tonx86.docs",
          "name": "ISA Docs",
          "type": "webview"
        }
      ]
    },
    "languages": [
      {
        "id": "tonx86",
        "aliases": [
          "TonX86 Assembly",
          "Assembly",
          "tonx86"
        ],
        "extensions": [
          ".asm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tonx86",
        "scopeName": "source.tonx86",
        "path": "./syntaxes/tonx86.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "tonx86"
      }
    ],
    "debuggers": [
      {
        "type": "tonx86",
        "label": "TonX86 Debugger",
        "program": "./dist/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the TonX86 assembly file to debug",
                "default": "${workspaceFolder}/${fileBasename}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "TonX86: Launch",
            "type": "tonx86",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasename}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "TonX86: Launch Program",
            "description": "Launch a TonX86 assembly program for debugging",
            "body": {
              "name": "TonX86: Launch",
              "type": "tonx86",
              "request": "launch",
              "program": "${workspaceFolder}/${fileBasename}",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "configuration": [
      {
        "title": "TonX86 LCD Display",
        "properties": {
          "tonx86.lcd.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable LCD display view in the debug explorer"
          },
          "tonx86.lcd.width": {
            "type": "integer",
            "default": 16,
            "minimum": 2,
            "maximum": 256,
            "description": "LCD display width in pixels (2-256)"
          },
          "tonx86.lcd.height": {
            "type": "integer",
            "default": 16,
            "minimum": 2,
            "maximum": 256,
            "description": "LCD display height in pixels (2-256)"
          },
          "tonx86.lcd.pixelSize": {
            "type": "number",
            "default": 5,
            "minimum": 1,
            "maximum": 50,
            "description": "LCD pixel size in pixels (1-50). Larger values make each pixel bigger on screen."
          }
        }
      },
      {
        "title": "TonX86 Keyboard",
        "properties": {
          "tonx86.keyboard.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable keyboard input capture for the simulator. When enabled, keyboard events are captured and made available to assembly programs via memory-mapped I/O (0xF100-0xF102)"
          }
        }
      },
      {
        "title": "TonX86 CPU",
        "properties": {
          "tonx86.cpu.speed": {
            "type": "number",
            "default": 100,
            "minimum": 1,
            "maximum": 200,
            "description": "CPU execution speed in percentage (1-200%). Below 100% adds periodic delays for slower, easier-to-debug execution. Above 100% reduces delays and yields for faster execution. 100% = normal speed."
          }
        }
      },
      {
        "title": "TonX86 Assembly",
        "properties": {
          "tonx86.assembly.autoAssemble": {
            "type": "boolean",
            "default": true,
            "description": "Automatically assemble on file save"
          },
          "tonx86.assembly.showDiagnostics": {
            "type": "boolean",
            "default": true,
            "description": "Show syntax and semantic diagnostics"
          }
        }
      },
      {
        "title": "TonX86 Compatibility",
        "properties": {
          "tonx86.compatibility.mode": {
            "type": "string",
            "enum": [
              "educational",
              "strict-x86"
            ],
            "default": "educational",
            "description": "x86 compatibility mode: 'educational' for simplified learning (flexible memory access, simplified flags), 'strict-x86' for realistic x86 behavior (no memory-to-memory MOV, segment registers, proper constraints)"
          }
        }
      },
      {
        "title": "TonX86 Debug",
        "properties": {
          "tonx86.debug.stopOnEntry": {
            "type": "boolean",
            "default": true,
            "description": "Automatically stop at the first instruction when debugging starts (applies to all debug sessions)."
          },
          "tonx86.debug.enableLogging": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug adapter logging to tonx86-debug.log file in the same directory as the program being debugged. When disabled, no log file is created (improves performance)."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build": "npm run check-types && node esbuild.js --production && npm run copy-debug-adapter",
    "package": "vsce package --no-dependencies",
    "copy-debug-adapter": "node copy-debug-adapter.js",
    "lint": "eslint src",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
