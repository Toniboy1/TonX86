{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TonX86 Assembly",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#mnemonics"
    },
    {
      "include": "#registers"
    },
    {
      "include": "#labels"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.tonx86",
          "match": ";.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tonx86",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tonx86",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.tonx86",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tonx86",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.tonx86",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.tonx86",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.tonx86",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.other.register.tonx86",
          "match": "\\b(EAX|ECX|EDX|EBX|ESP|EBP|ESI|EDI|AX|CX|DX|BX|SP|BP|SI|DI|AL|CL|DL|BL|AH|CH|DH|BH)\\b"
        }
      ]
    },
    "mnemonics": {
      "patterns": [
        {
          "name": "keyword.mnemonic.tonx86",
          "match": "\\b(MOV|MOVZX|MOVSX|XCHG|LEA|ADD|SUB|AND|OR|XOR|NOT|SHL|SHR|SAR|ROL|ROR|RCL|RCR|JMP|JZ|JNZ|JE|JNE|JG|JGE|JL|JLE|JS|JNS|JA|JAE|JB|JBE|CMP|TEST|CALL|RET|PUSH|POP|INC|DEC|NEG|MUL|DIV|IMUL|IDIV|HLT|NOP|INT|INT3|IRET|MOD|RAND|LOOP|LOOPE|LOOPZ|LOOPNE|LOOPNZ|LAHF|SAHF|CMOVE|CMOVZ|CMOVNE|CMOVNZ|CMOVL|CMOVLE|CMOVG|CMOVGE|CMOVA|CMOVAE|CMOVB|CMOVBE|CMOVS|CMOVNS|XADD|BSF|BSR|BSWAP|LODSB|LODS|STOSB|STOS|MOVSB|MOVS|SCASB|SCAS|CMPSB|CMPS)\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.tonx86",
          "match": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s*:"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tonx86",
          "match": "[,\\[\\]():]"
        }
      ]
    }
  },
  "scopeName": "source.tonx86"
}
