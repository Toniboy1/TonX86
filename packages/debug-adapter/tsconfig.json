{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@tonx86/simcore": ["../simcore/src"]
    }
  },
  "references": [
    { "path": "../simcore" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
