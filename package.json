{
  "name": "tonx86",
  "version": "0.5.0",
  "description": "Educational x86-like assembly environment for VS Code",
  "keywords": [
    "x86",
    "assembly",
    "assembler",
    "debugger",
    "simulator",
    "cpu",
    "emulator",
    "teaching",
    "education",
    "learning",
    "vscode-extension",
    "debug adapter",
    "language server"
  ],
  "private": true,
  "author": {
    "name": "Anthony Fasano (Toniboy1)",
    "url": "https://github.com/Toniboy1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toniboy1/TonX86.git"
  },
  "bugs": {
    "url": "https://github.com/Toniboy1/TonX86/issues"
  },
  "homepage": "https://github.com/Toniboy1/TonX86#readme",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.8.0"
  },
  "scripts": {
    "build": "npm run build -w packages/simcore && npm --workspaces run build",
    "watch": "npm --workspaces run watch",
    "dev": "npm run watch",
    "test": "npm --workspaces run test",
    "test:coverage": "npm --workspaces run test:coverage --if-present",
    "test:examples": "node scripts/test-examples.js",
    "lint": "npm --workspaces run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "bench": "npm run bench -w packages/simcore",
    "quality": "npm run format:check && npm run lint",
    "check:deps": "node scripts/check-deps.js",
    "precheck": "npm run check:deps",
    "check": "npm run quality && npm run build && npm test && npm run test:examples",
    "package": "npm run build && cd packages/extension && npm run package",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first": "standard-version --first-release"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "knip": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.56.0"
  }
}
